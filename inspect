#!/bin/bash

echo '------------------------------------------------------'
echo 'ENV VARS:'
env
grep -E '*' /etc/profile.d/*

echo '------------------------------------------------------'
echo '(VIRTUAL) HARDWARE:'
free
echo "CPU Model:"
grep 'model name' /proc/cpuinfo
echo "Intel VT Support":
egrep -c '(vmx|svm)' /proc/cpuinfo

echo '------------------------------------------------------'
echo 'OPERATING SYSTEM:'
uname -a
ulimit -a
cat /etc/issue

echo '------------------------------------------------------'
echo 'INSTALLED SOFTWARE'
dpkg -l
find /opt -maxdepth 3 -executable
find /usr/local -maxdepth 3 -executable
ls -l /usr/lib/jvm

echo 'OUTDATED SOFTWARE'
sudo apt-get install -qq apt-show-versions
sudo apt-show-versions -u

echo '------------------------------------------------------'
echo 'SERVICES'

ls -ltrh /etc/init.d/

for s in {'mysql','postgresql','mongodb','couchdb','rabbitmq','riak','memcached','redis','cassandra','neo4j','elasticsearch','kestrel'}; do
  echo "Check $s status:"
  sudo service $s status
done

echo '------------------------------------------------------'
echo 'OTHERS'
find /tmp -maxdepth 4
find $HOME -maxdepth 3

