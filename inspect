#!/bin/bash

echo '------------------------------------------------------'
echo 'ENV VARS:'
env
grep -E '*' /etc/profile.d/*

echo '------------------------------------------------------'
echo '(VIRTUAL) HARDWARE:'
free
grep 'model name' /proc/cpuinfo

echo '------------------------------------------------------'
echo 'OPERATING SYSTEM:'
uname -a
ulimit -a

echo '------------------------------------------------------'
echo 'INSTALLED SOFTWARE'
dpkg -l
find /opt -maxdepth 3 -executable
find /usr/local -maxdepth 3 -executable
ls -l /usr/lib/jvm

echo '------------------------------------------------------'
echo 'OTHERS'
who
find /tmp -maxdepth 4
find $HOME -maxdepth 3

echo '------------------------------------------------------'
echo 'Scala / SBT - specific stuff: '
du -hs ~/.sbt/*
du -hs ~/.ivy2/*
echo '/etc/sbt/jvmopts:'
cat /etc/sbt/jvmopts
echo '/etc/sbt/sbtopts:'
cat /etc/sbt/sbtopts

